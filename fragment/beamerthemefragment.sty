\gdef\titleimage#1{\def\btfr@title@image{#1}} \titleimage{}

\def\btfr@sepline{%
        {\normalsize\color{ctpsymbol}{\huge$\llap{$\diamond$}\hspace*{-1pt}$}\rule[.346\baselineskip]{\linewidth}{.55pt}{\huge$\hspace*{-1pt}\rlap{$\diamond$}$}}%
